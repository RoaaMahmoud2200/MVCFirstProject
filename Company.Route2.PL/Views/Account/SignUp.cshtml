
@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1> SignUp Form</h1>



<div class="main-agileinfo">
	<div class="agileits-top">
		<form  asp-action="SignUp">
			<div class="alert" asp-validation-summary="All"></div>
			<input class="text" asp-for="UserName" placeholder="Username" required="">
<br />
			<input class="text" asp-for="Fname" placeholder="Fname" required="">
			<br />

			<input class="text" asp-for="Lname" placeholder="Lname" required=""><br />

			<input class="text email" asp-for="Email" placeholder="Email" required="">

			<input class="text" asp-for="Password" placeholder="Password" required="">

			<input class="text w3lpass" asp-for="ConfirmedPassword" placeholder="Confirm Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="IsAgree" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Don't have an Account? <a asp-action="SignIn"> Login Now!</a></p>
	</div>
</div>
