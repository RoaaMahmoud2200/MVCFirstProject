@model SignInViewModel

@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<h1> SignIn Form</h1>


<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SignIn">
			<div class="alert" asp-validation-summary="All"></div>
			
			<input class="text email" asp-for="Email" placeholder="Email" required="">

			<input class="text" asp-for="Password" placeholder="Password" required="">

			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="RememberMe" class="checkbox">					<span>Remember Me</span>

				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIn">
		</form>
		<p>Don't have an Account? <a asp-action="SignUp"> SignUp Now!</a></p>
		<p>  <a asp-action="ForgetPassword"> Forget Password</a></p>
		
	</div>
</div>